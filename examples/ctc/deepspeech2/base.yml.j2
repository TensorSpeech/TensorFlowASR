{% set modeldir = "E:/Miscellanea/Models/local/transformer-ctc" %}
{% set datadir = "E:/MLDL/Datasets/ASR/LibriSpeech" %}

{# {% import "examples/configs/wp.yml.j2" as decoder_config %} #}
{% import "examples/configs/wp_whitespace.yml.j2" as decoder_config %}
{# {% import "examples/configs/sp.yml.j2" as decoder_config %} #}
{# {% import "examples/configs/sp_whitespace.yml.j2" as decoder_config %} #}
