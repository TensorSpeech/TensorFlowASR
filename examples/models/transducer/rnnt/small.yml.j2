{% import "examples/configs/librispeech/sentencepiece/sp.yml.j2" as decoder_config with context %}
{{decoder_config}}

model_config:
  class_name: tensorflow_asr.models.transducer>RnnTransducer
  config:
    name: rnn_transducer
    speech_config:
      sample_rate: 16000
      frame_ms: 25
      stride_ms: 10
      num_feature_bins: 80
      feature_type: log_mel_spectrogram
      augmentation_config:
        feature_augment:
          time_masking:
            prob: 1.0
            num_masks: 5
            mask_factor: 100
            p_upperbound: 0.05
          freq_masking:
            prob: 1.0
            num_masks: 1
            mask_factor: 27
    encoder_reduction_factors: [6,0,0,0]
    encoder_dmodel: 320
    encoder_rnn_type: lstm
    encoder_rnn_units: 1024
    encoder_nlayers: 4
    encoder_layer_norm: True
    prediction_label_encode_mode: embedding
    prediction_embed_dim: 640
    prediction_num_rnns: 1
    prediction_rnn_units: 1024
    prediction_rnn_type: lstm
    prediction_rnn_unroll: False
    prediction_layer_norm: True
    prediction_projection_units: 320
    prediction_projection_temporal: True
    joint_dim: 320
    prejoint_encoder_linear: False
    prejoint_prediction_linear: False
    postjoint_linear: False
    joint_activation: tanh
    joint_mode: add
    blank: 0
    vocab_size: {{decoder_config.vocabsize}}
    kernel_regularizer: null
    bias_regularizer: null

learning_config:
  optimizer_config:
    class_name: Custom>AdamW
    config:
      learning_rate: 0.001
      weight_decay: 1e-3
      beta_1: 0.9
      beta_2: 0.98
      epsilon: 1e-9

  gwn_config: null

  gradn_config:
    class_name: tensorflow_asr.optimizers.regularizers>TimeDependentGaussianGradientNoise
    config:
      mean: 0.0
      eta: 1.0
      gamma: 0.55

  running_config:
    batch_size: 4
    num_epochs: 300
    checkpoint:
      filepath: {{modeldir}}/checkpoints/{epoch:02d}.h5
      save_best_only: False
      save_weights_only: True
      save_freq: epoch
    backup_and_restore:
      backup_dir: {{modeldir}}/states
      save_freq: epoch
      delete_checkpoint: False
    tensorboard:
      log_dir: {{modeldir}}/tensorboard
      histogram_freq: 1
      write_graph: False
      write_images: False
      update_freq: epoch
      profile_batch: 100
