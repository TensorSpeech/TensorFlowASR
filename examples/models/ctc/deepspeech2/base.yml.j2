{% import "examples/configs/librispeech/characters/char.yml.j2" as decoder_config with context %}
{{decoder_config}}

model_config:
  class_name: tensorflow_asr.models.ctc>DeepSpeech2
  config:
    name: deepspeech2
    speech_config:
      sample_rate: 16000
      frame_ms: 25
      stride_ms: 10
      num_feature_bins: 128
      feature_type: log_mel_spectrogram
    conv_type: conv2d
    conv_kernels: [ [ 11, 41 ], [ 11, 21 ] ]
    conv_strides: [ [ 3, 2 ], [ 1, 2 ] ]
    conv_filters: [ 32, 32 ]
    conv_dropout: 0.1
    conv_padding: same
    rnn_nlayers: 5
    rnn_type: lstm
    rnn_units: 512
    rnn_bidirectional: True
    rnn_unroll: False
    rnn_rowconv: 0
    rnn_dropout: 0.1
    fc_nlayers: 1
    fc_units: 1024
    fc_dropout: 0.1
    blank: 0
    vocab_size: {{decoder_config.vocabsize}}
    kernel_regularizer:
      class_name: l2
      config:
        l2: 1e-6
    bias_regularizer:
      class_name: l2
      config:
        l2: 1e-6

learning_config:
  optimizer_config:
    class_name: Custom>Adam
    config:
      learning_rate: 0.001
      beta_1: 0.9
      beta_2: 0.98
      epsilon: 1e-9

  gwn_config: null

  gradn_config: null

  batch_size: 16
  ga_steps: 4
  num_epochs: 450

  callbacks:
    - class_name: tensorflow_asr.callbacks>TerminateOnNaN
      config: {}
    - class_name: tensorflow_asr.callbacks>ModelCheckpoint
      config:
        filepath: {{modeldir}}/checkpoints/{epoch:02d}.h5
        save_best_only: False
        save_weights_only: True
        save_freq: epoch
    - class_name: tensorflow_asr.callbacks>BackupAndRestore
      config:
        backup_dir: {{modeldir}}/states
        save_freq: epoch
        delete_checkpoint: False
    - class_name: tensorflow_asr.callbacks>TensorBoard
      config:
        log_dir: {{modeldir}}/tensorboard
        histogram_freq: 0
        write_graph: False
        write_images: False
        write_steps_per_second: False
        update_freq: batch
        profile_batch: 0

