{% import "examples/configs/librispeech/characters/char.yml.j2" as decoder_config with context %}
{{decoder_config}}

model_config:
  class_name: tensorflow_asr.models.ctc>DeepSpeech2
  config:
    name: deepspeech2
    speech_config:
      sample_rate: 16000
      frame_ms: 25
      stride_ms: 10
      num_feature_bins: 128
      feature_type: log_mel_spectrogram
      normalize_zscore: True
      augmentation_config:
        feature_augment:
          time_masking:
            prob: 0.5
            num_masks: 5
            mask_factor: -1 # whole utterance
            p_upperbound: 0.05
            mask_value: 0
          freq_masking:
            prob: 0.5
            num_masks: 1
            mask_factor: 27
            mask_value: 0
    conv_type: conv2d
    conv_kernels: [ [ 11, 41 ], [ 11, 21 ] ]
    conv_strides: [ [ 2, 2 ], [ 1, 2 ] ]
    conv_filters: [ 32, 32 ]
    conv_activation: relu
    conv_dropout: 0.2
    conv_padding: same
    rnn_nlayers: 5
    rnn_type: gru
    rnn_units: 800
    rnn_bidirectional: True
    rnn_unroll: False
    rnn_rowconv: 0
    rnn_rowconv_activation: relu
    rnn_dropout: 0.3
    fc_nlayers: 1
    fc_units: 1600
    fc_activation: relu
    fc_dropout: 0.3
    blank: 0
    vocab_size: {{decoder_config.vocabsize}}
    kernel_regularizer:
      class_name: l2
      config:
        l2: 0.0005
    bias_regularizer:
      class_name: l2
      config:
        l2: 0.0005

learning_config:
  optimizer_config:
    class_name: Custom>SGD
    config:
      learning_rate:
        class_name: Custom>PolynomialDecay
        config:
          initial_learning_rate: 0.001
          decay_steps: 10000 # around 5 epochs with batch size 16 and 8 tpus
          end_learning_rate: 0.0001
          power: 0.5
          cycle: False
      momentum: 0.9
      nesterov: True

  gwn_config: null

  gradn_config: null

  batch_size: 16
  ga_steps: 4
  num_epochs: 450

  callbacks:
    - class_name: tensorflow_asr.callbacks>TerminateOnNaN
      config: {}
    - class_name: tensorflow_asr.callbacks>ModelCheckpoint
      config:
        filepath: {{modeldir}}/checkpoints/{epoch:02d}.h5
        save_best_only: False
        save_weights_only: True
        save_freq: epoch
    - class_name: tensorflow_asr.callbacks>BackupAndRestore
      config:
        backup_dir: {{modeldir}}/states
        save_freq: epoch
        delete_checkpoint: False
    - class_name: tensorflow_asr.callbacks>TensorBoard
      config:
        log_dir: {{modeldir}}/tensorboard
        histogram_freq: 0
        write_graph: False
        write_images: False
        write_steps_per_second: False
        update_freq: batch
        profile_batch: 0

