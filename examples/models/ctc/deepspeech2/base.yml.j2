{% import "examples/configs/librispeech/characters/char.yml.j2" as decoder_config with context %}
{{decoder_config}}

model_config:
  class_name: tensorflow_asr.models.ctc>DeepSpeech2
  config:
    name: deepspeech2
    speech_config:
      sample_rate: 16000
      frame_ms: 25
      stride_ms: 10
      num_feature_bins: 160
      feature_type: spectrogram
    conv_type: conv2d
    conv_kernels: [ [ 11, 41 ], [ 11, 21 ] ]
    conv_strides: [ [ 2, 2 ], [ 1, 2 ] ]
    conv_filters: [ 32, 32 ]
    conv_dropout: 0.1
    conv_padding: same
    rnn_nlayers: 5
    rnn_type: lstm
    rnn_units: 800
    rnn_bidirectional: True
    rnn_unroll: False
    rnn_rowconv: 0
    rnn_dropout: 0.1
    fc_nlayers: 1
    fc_units: 1600
    fc_dropout: 0.1
    blank: 0
    vocab_size: {{decoder_config.vocabsize}}
    kernel_regularizer:
      class_name: l2
      config:
        l2: 1e-6
    bias_regularizer:
      class_name: l2
      config:
        l2: 1e-6

learning_config:
  optimizer_config:
    class_name: Adam
    config:
      learning_rate: 0.0005
      beta_1: 0.9
      beta_2: 0.98
      epsilon: 1e-9

  running_config:
    batch_size: 16
    num_epochs: 300
    checkpoint:
      filepath: {{modeldir}}/checkpoints/{epoch:02d}.h5
      save_best_only: False
      save_weights_only: True
      save_freq: epoch
    backup_and_restore:
      backup_dir: {{modeldir}}/states
      save_freq: epoch
      delete_checkpoint: False
    tensorboard:
      log_dir: {{modeldir}}/tensorboard
      histogram_freq: 1
      write_graph: False
      write_images: False
      update_freq: epoch
      profile_batch: 100

